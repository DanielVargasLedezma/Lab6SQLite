<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <ImageView
                android:id="@+id/imagenJobApp"

                android:layout_width="150dp"
                android:layout_height="150dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/curso_icon"
        />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="155dp"
        />

        <TextView
                android:id="@+id/id_curso"

                android:drawableStart="@drawable/hashtag"
                android:drawablePadding="5dp"
                android:drawableTint="@color/black"
                android:paddingStart="5dp"

                android:gravity="center_vertical"

                tools:text="CÃ³digo de Curso"

                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                app:layout_constraintVertical_bias="0.15"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guidelineStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
                android:id="@+id/descripcion"

                android:drawableStart="@drawable/name"
                android:drawablePadding="5dp"
                android:paddingStart="5dp"

                tools:text="Applicant profession"

                android:gravity="center_vertical"

                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginTop="5dp"

                app:layout_constraintStart_toEndOf="@+id/guidelineStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_curso"
        />

        <TextView
                android:id="@+id/creditos_curso"

                android:drawableStart="@drawable/creditos_curso"
                android:drawablePadding="5dp"
                android:paddingStart="5dp"

                tools:text="Applicant phone"

                android:gravity="center_vertical"

                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_marginTop="5dp"

                app:layout_constraintStart_toEndOf="@+id/guidelineStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descripcion"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>