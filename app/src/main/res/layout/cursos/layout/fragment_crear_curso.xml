<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_entidades"
        xmlns:app="http://schemas.android.com/apk/res-auto"

>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <ImageView
                android:id="@+id/imagenUsuario"

                android:src="@drawable/curso_icon"

                android:layout_width="160dp"
                android:layout_height="160dp"

                app:layout_constraintVertical_bias="0.05"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <EditText
                android:id="@+id/id_curso"

                android:background="@drawable/design"

                android:inputType="text"
                android:hint="Código del Curso"
                android:textColor="@drawable/edit_text"
                android:textColorHint="@color/grisBonito"
                android:gravity="center_vertical|center_horizontal"

                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintVertical_bias="0.05"

                android:drawableStart="@drawable/hashtag"
                android:paddingStart="5dp"
                android:drawablePadding="-25dp"
                android:drawableTint="@color/black"
                tools:ignore="RtlSymmetry"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagenUsuario"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <EditText
                android:id="@+id/descripcion_curso"

                android:background="@drawable/design"

                android:inputType="text"
                android:hint="Nombre del Curso"
                android:textColor="@drawable/edit_text"
                android:textColorHint="@color/grisBonito"
                android:gravity="center_vertical|center_horizontal"

                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintVertical_bias="0.05"

                android:drawableStart="@drawable/name"
                android:paddingStart="5dp"
                android:drawablePadding="-25dp"
                android:drawableTint="@color/black"
                tools:ignore="RtlSymmetry"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_curso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />



        <EditText
                android:id="@+id/creditos_curso"

                android:background="@drawable/design"

                android:inputType="number"
                android:hint="Créditos del curso"
                android:textColor="@drawable/edit_text"
                android:textColorHint="@color/grisBonito"
                android:gravity="center_vertical|center_horizontal"

                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintVertical_bias="0.05"

                android:drawableStart="@drawable/ic_email_svgrepo_com"
                android:paddingStart="5dp"
                android:drawableTint="@color/black"
                tools:ignore="RtlSymmetry"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descripcion_curso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />


        <ImageButton
                android:id="@+id/insertar"

                android:background="@drawable/boton_verde"

                android:layout_width="120dp"
                android:layout_height="50dp"

                app:layout_constraintVertical_bias="0.20"

                android:src="@drawable/save_icon"
                android:tint="@color/white"
                android:scaleType="fitCenter"
                android:contentDescription="Añadir Usuario"

                app:layout_constraintTop_toBottomOf="@+id/creditos_curso"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/insertar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>